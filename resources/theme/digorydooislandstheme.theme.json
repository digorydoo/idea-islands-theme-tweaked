{
  "name": "Digorydoo's Islands",
  "author": "digorydoo",
  "dark": true,
  "editorScheme": "Islands Custom Dark",
  "parentTheme": "Islands Dark",
  "colors": {
    "areaInsideDialogBg": "#232323",
    "brightOpacityBorder": "#ffffff1a",
    "controlBrightBg": "#333333",
    "controlDarkBg": "#26282b",
    "dialogBg": "#262625",
    "headerBg": "#1f1f1e",
    "mainWindowBg": "#292928",
    "selectedItemBg": "#0044bb",
    "textSelectionBg": "#aa7700",
    "toolAreaBg": "#1f1f1e",
    "transparent": "#00000000"
  },
  "remarks": [
    "Some keys may be marked by the IDE in the JSON, but they still work",
    [
      "The main window background consists of:",
      "MainWindow.background: centre",
      "MainToolbar.background: top",
      "ToolWindow.Stripe.background: left and right toolbars"
    ],
    "DefaultTabs.background: Not really visible, overridden by EditorTabs.background, etc.",
    "TabbedPane.background: Unused???",
    "ToolWindow.Stripe.borderColor: border of left and right toolbars",
    "TextField.background: search field in the Settings dialog",
    "Tree.selectionBackground: selected item in the Settings tree view",
    "ComboBox.ArrowButton.background: only for active dropdowns whose text field can be edited",
    "Button.arc: integer value for the rounded corner in px. Unfortunately broken, focus rings don't match",
    "PopupMenu.background: Only visible around dividers",
    "PopupMenu.borderInsets: top, left, bottom, right of context menu padding (around all items)",
    "PopupMenu.Selection.outerInsets: top, left, bottom, right of context menu item margin (around each item)",
    "PopupMenu.Selection.innerInsets: top, left, bottom, right of context menu item padding (inside each item)"
  ],
  "ui": {
    "Borders.color": "brightOpacityBorder",
    "Button.background": "dialogBg",
    "Button.endBackground": "controlBrightBg",
    "Button.startBackground": "controlBrightBg",
    "Button.default.endBackground": "selectedItemBg",
    "Button.default.startBackground": "selectedItemBg",
    "CheckBox.background": "controlBrightBg",
    "CheckBox.iconCheckColor": "#ff0000",
    "ComboBox.ArrowButton.background": "controlBrightBg",
    "ComboBox.ArrowButton.nonEditableBackground": "controlBrightBg",
    "ComboBox.background": "controlBrightBg",
    "ComboBox.disabledBackground": "transparent",
    "ComboBox.nonEditableBackground": "controlBrightBg",
    "ComboBox.selectionBackground": "selectedItemBg",
    "ComboBoxButton.background": "controlBrightBg",
    "DefaultTabs.background": "headerBg",
    "EditorTabs.background": "headerBg",
    "Island.borderColor": "toolAreaBg",
    "List.background": "areaInsideDialogBg",
    "List.dropLineColor": "brightOpacityBorder",
    "List.selectionBackground": "selectedItemBg",
    "MainToolbar.background": "mainWindowBg",
    "MainToolbar.inactiveBackground": "mainWindowBg",
    "MainWindow.Tab.background": "headerBg",
    "MainWindow.background": "mainWindowBg",
    "PopupMenu.selectionBackground": "#007700",
    "PopupMenu.Selection.arc": 0,
    "PopupMenu.borderInsets": "4,0,4,0",
    "PopupMenu.Selection.innerInsets": "0,8,0,8",
    "PopupMenu.Selection.outerInsets": "0,0,0,0",
    "MenuBar.selectionBackground": "#ff0000",
    "MenuItem.selectionBackground": "selectedItemBg",
    "PopupMenuItem.selectionBackground": "#884400",
    "Panel.background": "dialogBg",
    "SidePanel.background": "dialogBg",
    "StatusBar.background": "mainWindowBg",
    "TabbedPane.background": "headerBg",
    "Table.background": "areaInsideDialogBg",
    "Table.selectionBackground": "selectedItemBg",
    "TextArea.background": "#880000",
    "TextArea.selectionBackground": "textSelectionBg",
    "TextField.background": "controlBrightBg",
    "TextField.selectionBackground": "textSelectionBg",
    "TextPane.background": "toolAreaBg",
    "TextPane.selectionBackground": "textSelectionBg",
    "ToolWindow.Header.background": "headerBg",
    "ToolWindow.Header.inactiveBackground": "headerBg",
    "ToolWindow.Stripe.background": "mainWindowBg",
    "ToolWindow.background": "toolAreaBg",
    "Tree.background": "areaInsideDialogBg",
    "Tree.hash": "brightOpacityBorder",
    "Tree.selectionBackground": "selectedItemBg"
  }
